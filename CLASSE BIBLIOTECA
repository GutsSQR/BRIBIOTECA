using System;

public class Biblioteca
{
    public void RegistrarEmprestimo(Livro livro, Leitor leitor)
    {
        Console.WriteLine($"O leitor {leitor.Nome} retirou o livro \"{livro.Titulo}\" do autor {livro.Autor}.");
    }
}

class Program
{
    static void Main(string[] args)
    {
        Livro livro = new Livro("O Senhor dos An√©is", "J.R.R. Tolkien");
        Leitor leitor = new Leitor("Carlos Eduardo");
        Biblioteca biblioteca = new Biblioteca();
        biblioteca.RegistrarEmprestimo(livro, leitor);
    }
}
